{
    "extends": "./resources/presets/vue/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noEmit": true,
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./resources/js@src/*"
            ],
            "@pub/*": [
                "./resources/js@pub/*"
            ],
            "@data/*": [
                "./resources/data/*"
            ],
            "@img/*": [
                "./resources/img/*"
            ],
        }
    },
    "exclude": [
        "node_modules"
    ]
}
