{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": "./",
        "paths": {
            "@/*": [ "resources/*" ],
            "@src/*": [ "resources/js@src/*" ],
            "@pub/*": [ "resources/js@pub/*" ],
            "@img/*": [ "resources/img/*" ],
            "@icons/*": [ "resources/icons/*" ],
        },
        "types": [
            "vite/client"
        ]
    },
}
