{% set list = list ?? data.socials %}

<ul class="c-socials {{ class }}">
    {% for item in list %}
        <li class="c-socials__item">
            <a
                href="{{ item.link }}"
                class="c-socials__link"
                target="_blank"
                rel="noopener noreferrer"
            >
                <span class="sr-only">{{ item.title }}</span>
                {% include "_app/icon.twig" with { type: 'socials', name: item.id } only %}
            </a>
        </li>
    {% endfor %}
</ul>
