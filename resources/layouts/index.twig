{% extends '_templates/base.twig' %}

{% set pageTitle = 'Список сторінок' %}
{% set pageId = 'index' %}
{# {% set styleLinks = ['home'] %} #}
{# {% set htmlClass = 'is-nospace' %} #}

{% block content %}
    <div class="container">
        <div class="text-black bg-gray-100 mt-pageSpace">
            {% if data.pages is empty %}
                <div class="font-bold text-3xl text-gray-400 h-[250px] flex justify-center items-center">
                    Сторінки відсутні
                </div>
            {% else %}
                {% for page in data.pages %}
                    {% if page.slug != 'index' %}
                        <div class="relative md:flex md:items-center p-2 md:px-6 {% if not loop.first %}border-t{% endif %} hover:bg-black/5 transition-colors">
                            <div class="md:flex-grow">
                                <a
                                    href="{{ page.html }}"
                                    class="block font-bold leading-5 text-lg link-overlay"
                                >
                                    {{ page.title }}
                                </a>
                                <div class="mt-1 leading-5 text-gray-400">{{ page.html }}</div>
                            </div>

                            <div class="flex items-center mt-2 md:mt-0 md:ml-4">
                                <div class="mr-2">
                                    <div class="px-2 inline-flex text-xs leading-5 rounded-full {{ page.desktop ? 'bg-green-500' : 'bg-red-500' }} text-white">
                                        desktop
                                    </div>
                                </div>

                                <div>
                                    <div class="px-2 inline-flex text-xs leading-5 rounded-full {{ page.responsive ? 'bg-green-500' : 'bg-red-500' }} text-white">
                                        responsive
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>

        <div class="mt-1 text-xs leading-5 text-right text-gray-400">
            Дата оновлення:
            <span>{{ "now"|date("d.m.Y H:i:s") }}</span>
        </div>
    </div>
{% endblock %}


