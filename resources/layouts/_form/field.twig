{% set id = id ?? 'formField' ~ random() %}

{% if not isFloat %}
    {% if label %}
        <label for="{{ id }}" class="f-label">{{ label }}</label>
    {% endif %}
{% endif %}

<div class="relative {{ wrapperClass }}">
    {% block fieldBefore %}{% endblock %}

    <input
        type="{{ type ?? 'text' }}"
        id="{{ id }}"
        name="{{ name ?? '' }}"
        value="{{ value ?? '' }}"
        class="
            f-field
            {{ error ? 'f-field--error' : '' }}
            {{ isFloat ? 'f-field--float' : '' }}
            {{ class }}
        "
        placeholder="{{ placeholder ?? ' ' }}"
        {{ attrs }}
    >

    {% if isFloat %}
        {% if label %}
            <label for="{{ id }}" class="f-label">{{ label }}</label>
        {% endif %}
    {% endif %}

    {% block fieldAfter %}{% endblock %}
</div>

{% if error %}
    <span class="f-info f-info--error">{{ error }}</span>
{% endif %}
