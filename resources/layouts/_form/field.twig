{% set id = id ?? 'formField' ~ random() %}

{% if label %}
    <label for="{{ id }}" class="f-label">{{ label }}</label>
{% endif %}

<div class="relative {{ wrapperClass }}">
    {% block fieldBefore %}{% endblock %}

    <input
        type="{{ type ?? 'text' }}"
        id="{{ id }}"
        name="{{ name ?? '' }}"
        value="{{ value ?? '' }}"
        class="f-field {{ error ? 'f-field--error' : '' }} {{ class }}"
        placeholder="{{ placeholder }}"
        {{ attrs }}
    >

    {% block fieldAfter %}{% endblock %}
</div>

{% if error %}
    <span class="f-info f-info--error">{{ error }}</span>
{% endif %}
